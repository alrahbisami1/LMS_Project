@{
    ViewData["Title"] = "CreateRoles";
}

<h1 class="mt-3">Create Roles</h1>

<form asp-action="CreateRoles">
    <div class="form-control mt-3 col-12 w-100 text-center">
        <input type="text" class="form-control w-100" name="txtRoleName" placeholder="Enter Role Name" />
    </div>
    <input type="submit" class="btn btn-primary mt-3" name="Add Role" />
    <div class="row d-flex mt-4">
        <div class="col-4">
            <button class="w-100 btn btn-secondary " asp-controller="Admin" asp-action="AssignRole">Assign Role</button>
        </div>
        <div class="col-4">
            <button class="w-100 btn btn-secondary"  asp-controller="Admin" asp-action="SortByRole">Sort By Role</button>
        </div>
        <div class="col-4">
            <button class="w-100 btn btn-secondary" asp-controller="Admin" asp-action="Index">Show All Roles</button>
        </div>
        
    </div>
</form>
