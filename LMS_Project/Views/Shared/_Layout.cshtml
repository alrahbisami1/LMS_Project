<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <title>@ViewData["Title"] - LMS_Project</title>

    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->

    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->

    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <header>
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
                <h2 class="m-0 text-primary"><i class="fa fa-book me-3"></i>LMS</h2>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                    @*   <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="CourseHome">Courses</a>*@

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-item nav-link" asp-area="" asp-controller="Admin" asp-action="CreateRoles">Create Role</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Category" asp-action="Create">Create Category</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Course" asp-action="Create">Create Course</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="ChooseCourses">Assing Course</a>
                    }
                    @if (User.IsInRole("Teacher"))
                    {
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="OwnCourse">My Courses</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Lecture" asp-action="Create">Create Lecture</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="File" asp-action="Create">Create Lecture File</a>

                    }
                    @if (User.IsInRole("Student"))
                    {
                         <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="OwnCourse">My Courses</a>
                    }

                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
        <!-- Navbar End -->

    </header>

    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()
        </main>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">

        <div class="container">
            <div class="copyright">
                <div class="row">
                    <div class="col-md-12 text-center text-md-start mb-3 mb-md-0 text-center">
                        &copy; <a href="#">Learning Management System</a>, All Right Reserved.


                        Designed By <a class="border-bottom" href="https://mol.gov.om">MOL TEAM</a><br><br>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->

    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
