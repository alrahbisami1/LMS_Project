@model IEnumerable<BOL.Data.Course>

@{
    ViewData["Title"] = "StudentEnrollment";
}

<h1>StudentEnrollment</h1>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
@foreach (var item in ViewBag.CategoryId)
{
    <a asp-action="filtercourses" asp-route-id="@item.Id"> @item.Name  </a>
}
@if (ViewBag.msgsuccess != null)
{
    <h3>@ViewBag.msgsuccess</h3>
}


@if (Model.Count() > 0)
{


    <table class="table">
        <tr>

            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
        @foreach (var crs in Model)
        {
            <tr>

                <td>@crs.Name</td>
                <td>@crs.Description</td>
                <td> <a asp-action="StudentEnrollment" asp-route-id="@crs.Id"> <i class="bi bi-box-arrow-right "></i>  </a>  </td>
            </tr>
        }
    </table>
}