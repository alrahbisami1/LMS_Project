@model IEnumerable<BOL.Data.UserCourse>
@{
    ViewData["Title"] = "Assign Courses To Teacher";
}

<h1>ChooseCourses</h1>

<form asp-action="ChooseCourses">
    <div class="container mt-3">

        <div class="row d-flex flex-wrap g-3">

            <div class="col-6 shadow-sm p-3">
               
                <h4>Teatcher Username</h4>
                <select asp-items="ViewBag.UserId" class="form-control" name="UserId">

                    <option value="null">
                        -Select-

                    </option>
                </select>
            </div>

            <div class="col-6 shadow-sm p-3">
                <h3><a asp-action="create" asp-controller="Course">Create Course</a></h3>
                <h4>Courses</h4>
                <ul class="list-group">

                    @foreach (var item in ViewData["CourseId"] as SelectList)
                    {
                        <li class="list-group-item">
                            <input class="form-check-input me-1" name="CourseId" type="checkbox" value="@item.Value" aria-label="...">
                            @item.Text
                        </li>
                    }
                </ul>
            </div>

            <div class="col-12 shadow-sm p-3">
                <button class=" btn btn-primary w-100">
                    <i class="bi bi-plus-circle-fill"></i>
                    Assign Course To Teacher
                </button>
            </div>


        </div>
    </div>
</form>