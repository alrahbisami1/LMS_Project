@model IEnumerable<BOL.Data.Lecture>
@{
    ViewData["Title"] = "LectureFiles";
}

<h1 class="mt-4">My Courses</h1>

<table class="table table-bordered border-2">
    <thead>
        <tr>
            <th>
                Course Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                More Details
            </th>
            <th>
                Course Status
            </th>

            <th>
                Lectures Related to This Course
            </th>
            <th>
                Files Related to This Lecture
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @item.Course.Name
                </td>
                <td>
                    @item.Course.StartDate
                </td>
                <td>
                    @item.Course.EndDate
                </td>
                <td>
                    <a asp-controller="Course" asp-action="Details" asp-route-id="@item.Id">More Details</a>
                </td>
                <td>
                    @if (item.Course.IsActive == true)
                    {
                        <b class="text-primary">Active</b>
                    }
                    else
                    {
                        <b class="text-warning">Expired</b>
                    }
                </td>
                <td>
                    
                        @if (item.Title != null)
                        {
                            <p> @item.Title | <a asp-controller="Lecture" asp-action="Details" asp-route-id="@item.Id">Details</a> </p>

                        }

                    }
                </td>
                <td>
                   @item.File.Description
                </td>

                @*<td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>*@
            </tr>

        }
    </tbody>
</table>